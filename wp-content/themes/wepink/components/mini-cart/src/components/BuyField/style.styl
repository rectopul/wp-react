form
    &.cart
        .quantity,
        .single_add_to_cart_button
            display none !important

.buyfield
    display flex
    align-items: center
    margin-top 25px
    margin-bottom 25px

    .inputWrapper
        display flex
        justify-content center
        align-items center
        padding 0 50px   
        border-top 2px solid var(--default_bg)
        border-left 2px solid var(--default_bg)
        border-bottom 2px solid var(--default_bg)
        border-top-left-radius 8px
        border-bottom-left-radius 8px
        height 53px
        margin-right -5px

        input
            max-width 40px
            border 0
            outline 0
            text-align center
            font-family var(--font-family)
            font-weight 600
            font-size 24px
            color var(--default_bg)

        button
            border-radius 40px
            width 40px
            height: 40px
            border 0
            background var(--default_bg)
            cursor pointer
            margin 0 10px

    .buyButton
        button
            background var(--default_bg)
            border 0
            color #fff
            height 53px
            padding 15px 100px
            font-family var(--font-family)
            font-weight 700
            font-size 20px
            border-radius 8px
            border 0
            line-height 1
            cursor pointer

            &:hover
                background #ff93be
                color var(--default_bg)