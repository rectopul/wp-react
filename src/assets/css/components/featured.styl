.product-rows
    flex-wrap wrap

    .product-item
        flex 0 0 calc(25% - 40px)

.product_destaque
    display flex
    width 100%
    max-width 1500px
    justify-content center
    margin 0 auto
    height 480px
    margin-bottom 70px

    @media screen and (max-width 600px)
        flex-direction column
        height auto
        padding 0 10px

    > article
        flex 0 0 480px
        background-color var(--default_bg)
        color #fff
        font-family var(--default-font)
        padding 40px    
        text-align left
        box-shadow: 10px 10px 20px #ddd
        border-radius: 0 6px 6px 0

        @media screen and (max-width 600px)
            flex 0 0 auto

        span
            font-weight: 700
            font-size: 17px
            font-family var(--default-font)
            color #fff

            &.sale_price
                display flex
                flex-direction column
                margin 30px 0
                


        .vtex-product-summary-2-x-element
            height auto !important
            p
                color #fff
                font-family var(--default-font)
                font-weight 400
                font-size 16px

        a
            width: 180px
            height: 45px
            border-radius: 6px
            border: 1px solid #fff
            display: flex
            align-items: center
            justify-content: center
            text-decoration: none
            color: #fff
            margin-top: 8px

            &:hover
                background-color #fff
                border-color #fff
                color var(--default_bg)

        h5
            color: #fff
            font-size: 20px
            font-weight: 600
            margin: 20px 0
            font-family var(--default-font)

        h2
            font-family var(--default-font)
            font-size: 22px
            font-weight 700
            color #fff
            margin: 12px 0 28px
            overflow: hidden
            display: -webkit-box
            -webkit-line-clamp: 2
            -webkit-box-orient: vertical

    figure
        flex 0 0 480px
        display flex
        margin-right 12px
        box-shadow: 10px 10px 20px #ddd
        border-radius: 6px 0 0 6px
        height 100%

        @media screen and (max-width 600px)
            flex 0 0 auto

        img
            max-width 100%
            height auto