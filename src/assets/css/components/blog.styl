.blog-container
    .container 
        background-color: #f4f4f4
        padding-left 60px
        padding-right 60px
        padding-bottom 60px

    .post-container
        padding 0 20px

    .categories
        margin 35px 0
        ul
            li
                font-family var(--default-font) 
                a
                    font-style: normal
                    font-weight: 400
                    font-size: 12px
                    line-height: 15px
                    color: #505050
                    border: 1px solid #505050
                    box-sizing: border-box
                    border-radius: 24px
                    padding: 4px 8px

    h3
        font-weight: 700
        font-size: 24px
        line-height: 32px
        height 70px
        letter-spacing: .2px
        color: var(--default_bg)

    p
        font-weight: 400
        font-size: 16px
        line-height: 26px
        margin-top 25px

    h2
        width 100%
        text-align center
        margin 60px 0
        font-family var(--default-font) 
        font-weight 700
        color var(--default_bg) 
        font-size 48px

    figure
        width 100%
        display flex
        height 270px
        border-radius: 24px
        overflow hidden

    img
        width auto
        height 100%
        border-radius: 24px;