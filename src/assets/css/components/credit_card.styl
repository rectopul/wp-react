
body
    .type-page 
        &.status-publish
            max-width 1520px
            margin 0 auto
    .woocommerce-checkout-payment
        &#payment
            background-color transparent

    .payment_method_rct
        background-color transparent !important

        &:before
            content none !important

    ul
        &.wc_payment_methods
            box-shadow: 0 0 33px -19px #ccc
            background-color transparent
    #wc-rct-cc-form
        display flex
        flex-direction column

        .security_info_card
            width: 100%
            display flex
            justify-content space-between
            flex-direction row !important

            &:before,
            &:after
                content none

            > span
                flex 0 0 calc(50% - 20px)
                padding 0
                width initial
                display flex

                input
                    margin 0 !important
                    height 50px
                    border-radius 4px
                    border-width 2px !important
            

        .form-row
            display flex
            flex-direction column
            padding 20px 0 !important

            input,
            select
                height 50px
                border: 2px solid #e3e3e3
                box-shadow: none
                color: #222
                font-size: 12px
                font-weight: 400
                font-family: Lato, sans-serif
                letter-spacing: 1px
                width: 100%
                border-radius 4px
                padding: 0 0 0 10px