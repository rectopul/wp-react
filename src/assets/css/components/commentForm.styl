.content__post
    .woocommerce
        .title__page
            font-size: 48px !important
            font-family var(--default-font) !important
            color var(--default_bg) !important
            font-weight 700 !important
            text-align center !important
            justify-content center

.comentarios__forma
    .comment-reply-title
        font-size: 24px
        font-family var(--default-font)
        color #000
        font-weight 700
        text-align center

#commentform
    p
        display flex
        flex-direction column

        label
            font-weight: 700
            font-size: 16px
            font-family var(--default-font)
            color var(--default_bg)
            text-transform lowercase

        input
            height 42px
            font-size: 16px
            appearance none
            border 1px solid #e3e4e6
            padding 5px 15px 
            border-radius 4px
            
            &[type=checkbox]
                width 20px
                height 20px
                margin-right 7px    
                padding 0
                padding 5px 15px 

        textarea
            border-radius 4px
            border 1px solid #e3e4e6

        &.comment-form-cookies-consent
                flex-direction row
            label
                font-size 14px
    .comment-notes
        text-align center
        span
            font-size: 24px
            font-family var(--default-font)
            color #000
            font-weight 700
            